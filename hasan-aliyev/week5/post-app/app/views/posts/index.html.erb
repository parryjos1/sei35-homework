<h1>Post page</h1>

<%= link_to "New Post", posts_new_path %>


<% @posts.each do |post| %>
  <p>
    [<%= post.id %>]<%= post.title %>
  </p>

  <p>
   <%= post.body %>
  </p>


  <%= link_to "Show", post %>
  <%= link_to "Edit", edit_post_path(post) %>
  <%= link_to "Destroy", delete_post_path(post), method: :delete, data: { confirm: "Are you sure? You can'restore it after deleting"}  %>
<% end %>
