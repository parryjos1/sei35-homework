
<%= form_for @work do | f | %>

  <%= f.label :artist_id, 'Artist Name:' %>
  <%= f.select "artist_id", options_from_collection_for_select(@artists, "id", "name"),:class => 'form-control', prompt: 'please select' %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :year %>
  <%= f.text_field :year %>

  <%= f.label :medium %>
  <%= f.text_field :medium %>

  <%= f.label :style %>
  <%= f.text_field :style %>

  <%= f.label :image %>
  <%= f.text_field :image %>
<br>
  <%= f.submit %>

<% end %>


<%= link_to image_tag(work.image, class: 'thumb'), work_path(@work.id) %>
